<div class="user-container">
    <%if @users.empty?%>
        <h1>There are no users yet</h1>
    <%end%>

    <ul>
      <%@users.each do |user|%>
        <li>
          <a href="/users/<%= user.id%>">
            <%= render partial: 'shared/user_card', locals: { user: user } %>
          </a>
        </li>
      <%end%>
    </ul>
</div>