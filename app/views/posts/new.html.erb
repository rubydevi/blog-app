<div class="container post">
  <h1>Create New Post</h1>
  <%= form_with(model: [@user, @post], url: user_posts_path(@user)) do |f| %>
    <div class="f-post">
      <div class="col-6 mb-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
      <div class="col-6 mb-3">
        <%= f.label :text %>
        <%= f.text_area :text, class: "form-control", rows: 3, cols: 25, required: true %>
      </div>
      <div class="col-6">
        <p><%= f.submit "Add Post", class: "btn btn-primary"%></p>
      </div>
    </div>
  <% end %>
</div>
