<div class="container comments">
  <h1>Add Comment</h1>
  <%= form_with model: @comment, url: user_post_comments_path do |f| %>
    <div class="col-6">
      <%= f.text_area :text, class: 'form-control', cols: 25, rows: 5, required: true, placeholder: 'Write comment here...' %><br>
    </div>

    <div class="col-6">
      <%= f.submit "Submit Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>